<div class="page-header"><h2>Sign up</h2></div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input"><%= f.email_field :email %></div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input"><%= f.password_field :password %></div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn primary" %>
    <%= link_to "Cancel", root_path, :class => "btn" %>
  </div>
<% end %>

<%= render :partial => "user/shared/links" %>
