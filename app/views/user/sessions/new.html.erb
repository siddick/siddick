<div class="page-header"><h2>Sign in</h2></div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input"><%= f.email_field :email %></div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input"><%= f.password_field :password %></div>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="clearfix">
    <div class="input">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
  </div>
  <% end -%>
  <div class="actions">
    <%= f.submit "Sign in", :class => "btn primary", :disable_with => "Validating..." %>
    <%= link_to "Cancel", root_path, :class => "btn" %>
  </div>
<% end %>

<%= render :partial => "user/shared/links" %>
