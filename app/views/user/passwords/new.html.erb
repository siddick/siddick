<div class="page-header"><h2>Forgot your password?</h2></div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="clearfix">
    <%= f.label :email %>
    <div class="input"><%= f.email_field :email %></div>
  </div>

  <div class="actions">
    <%= f.submit "Recover my password", :class => "btn primary" %>
    <%= link_to "Cancel", root_path, :class => "btn" %>
  </div>
<% end %>

<%= render :partial => "user/shared/links" %>